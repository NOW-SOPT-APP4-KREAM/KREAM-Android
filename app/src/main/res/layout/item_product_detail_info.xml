<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="14dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_product_detail_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_product_detail_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textAppearance="@style/TextAppearance.Kream.Body6.Regular"
            android:textColor="@color/black06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="최근 거래가" />

        <TextView
            android:id="@+id/tv_product_detail_info_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_product_detail_info_title"
            tools:text="132,000" />

        <ImageView
            android:id="@+id/iv_product_detail_info_additional_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_updown_down_8"
            app:layout_constraintBottom_toBottomOf="@id/tv_product_detail_info_additional_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_product_detail_info_additional_content" />

        <TextView
            android:id="@+id/tv_product_detail_info_additional_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.Kream.Body5.SemiBold"
            android:textColor="@color/green02"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_product_detail_info_additional_content"
            app:layout_constraintTop_toBottomOf="@id/tv_product_detail_info_content"
            tools:text="16,000(-10,8%)" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_product_detail_info"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/gray04"
        android:layout_marginStart="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_product_detail_info"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>