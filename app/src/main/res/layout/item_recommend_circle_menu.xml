<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="67dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingEnd="3dp">

    <ImageView
        android:id="@+id/iv_circle_menu"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:background="@drawable/shape_oval"
        android:backgroundTint="@color/gray04"
        android:clipToOutline="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_circle_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:lines="2"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Kream.Body6.Regular"
        android:textColor="@color/black02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_circle_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>