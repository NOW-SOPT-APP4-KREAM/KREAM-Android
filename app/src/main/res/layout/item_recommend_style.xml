<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="116dp"
    android:layout_height="154dp"
    android:layout_marginEnd="5dp">

    <ImageView
        android:id="@+id/iv_style"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_border_radius_8"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_style_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/TextAppearance.Kream.Body5.Regular"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_style"
        app:layout_constraintStart_toStartOf="@id/iv_style" />

</androidx.constraintlayout.widget.ConstraintLayout>