<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="22dp">

    <ImageView
        android:id="@+id/iv_search_search_find_product_thumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_border_radius_10"
        android:backgroundTint="@color/gray06"
        android:clipToOutline="true"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tv_search_search_find_product_transaction_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAppearance="@style/TextAppearance.Kream.Body5.Regular"
        android:textColor="@color/black04"
        app:layout_constraintEnd_toEndOf="@id/iv_search_search_find_product_thumbnail"
        app:layout_constraintTop_toTopOf="@id/iv_search_search_find_product_thumbnail"
        tools:text="거래 8.3만" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="8dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="8dp" />

    <TextView
        android:id="@+id/tv_search_search_find_product_brand_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAppearance="@style/TextAppearance.Kream.Body4.Bold"
        android:textColor="@color/black02"
        app:layout_constraintEnd_toStartOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/iv_search_search_find_product_thumbnail"
        tools:text="Adidas" />

    <TextView
        android:id="@+id/tv_search_search_find_product_eng_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textAppearance="@style/TextAppearance.Kream.Body6.SemiBold"
        android:textColor="@color/black02"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/tv_search_search_find_product_brand_title"
        tools:text="Adidas Samba OG Cloud White" />

    <TextView
        android:id="@+id/tv_search_search_find_product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Kream.Body7.Regular"
        android:textColor="@color/black06"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/tv_search_search_find_product_eng_title"
        tools:text="아디다스 삼바 OG 블랙 화이트 검" />

    <include
        android:id="@+id/include_search_search_find_product_fast_delivery"
        layout="@layout/view_fast_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/tv_search_search_find_product_title" />

    <TextView
        android:id="@+id/tv_search_search_find_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:textAppearance="@style/TextAppearance.Kream.Body4.Bold"
        android:textColor="@color/black01"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/include_search_search_find_product_fast_delivery"
        tools:text="67,000원" />

    <TextView
        android:id="@+id/tv_search_search_find_product_instant_purchase_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/product_instant_purchase_price"
        android:textAppearance="@style/TextAppearance.Kream.Body7.Regular"
        android:textColor="@color/black06"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/tv_search_search_find_product_price" />

    <ImageView
        android:id="@+id/iv_search_search_find_product_scrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:src="@drawable/ic_card_saved_small_16"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/tv_search_search_find_product_instant_purchase_price" />

    <TextView
        android:id="@+id/tv_search_search_find_product_scrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:textAppearance="@style/TextAppearance.Kream.Body5.Regular"
        android:textColor="@color/black06"
        app:layout_constraintBottom_toBottomOf="@id/iv_search_search_find_product_scrap"
        app:layout_constraintStart_toEndOf="@id/iv_search_search_find_product_scrap"
        app:layout_constraintTop_toTopOf="@id/iv_search_search_find_product_scrap"
        tools:text="11.4만" />

    <ImageView
        android:id="@+id/iv_search_search_find_product_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_card_style_16"
        app:layout_constraintBottom_toBottomOf="@id/tv_search_search_find_product_scrap"
        app:layout_constraintStart_toEndOf="@id/tv_search_search_find_product_scrap"
        app:layout_constraintTop_toTopOf="@id/tv_search_search_find_product_scrap" />

    <TextView
        android:id="@+id/tv_search_search_find_product_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:textAppearance="@style/TextAppearance.Kream.Body5.Regular"
        android:textColor="@color/black06"
        app:layout_constraintBottom_toBottomOf="@id/iv_search_search_find_product_style"
        app:layout_constraintStart_toEndOf="@id/iv_search_search_find_product_style"
        app:layout_constraintTop_toTopOf="@id/iv_search_search_find_product_style"
        tools:text="1,342" />

</androidx.constraintlayout.widget.ConstraintLayout>